{
  "$schema": "http://json.schemastore.org/package.json",
  "name": "udao-server",
  "version": "1.0.0",
  "description": "Udao server",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/src/index.js",
    "start:dev": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint --fix src test",
    "typecheck": "tsc --noEmit",
    "db:pull": "dotenv -e .env drizzle-kit introspect:pg",
    "db:migrations:generate": "dotenv -e .env drizzle-kit generate:pg",
    "db:migrations:drop": "dotenv -e .env drizzle-kit drop",
    "db:migrations:apply": "dotenv -e .env ts-node src/db/migrate.ts",
    "db:studio": "dotenv -e .env drizzle-kit studio"
  },
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.28.6",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.52.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
